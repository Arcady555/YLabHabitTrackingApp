<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <property name="now" value="now()" dbms="postgresql"/>
    <changeSet id="04" author="Arcady555">

        <createSequence
                startValue="1"
                incrementBy="1"
                sequenceName="log1"/>

        <createTable tableName="logs" schemaName="ht_log_schema" remarks="записи из лога">
            <column name="LOG_TIME" type="timestamp" remarks="время создания записи"/>
            <column name="LOG_LEVEL" type="varchar" remarks="уровень"/>
            <column name="MESSAGE" type="varchar" remarks="текст лога"/>
        </createTable>

    </changeSet>
</databaseChangeLog>